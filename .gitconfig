[user]
  name = Mikazuki Fuyuno
  email = mikazuki_fuyuno@outlook.com

[color]
  ui = auto

[commit]
  template = ~/.commit_template

[core]
  editor = vim
  autocrlf = input

[diff]
  tool = vimdiff

[push]
  default = simple

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
