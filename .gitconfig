[user]
  name = Mikazuki Fuyuno
  email = mikazuki_fuyuno@outlook.com

[color]
  ui = auto

[core]
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore_global

[alias]
  conflicts = diff --name-only --diff-filter=U

[diff]
  tool = vimdiff

[push]
  default = simple

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
